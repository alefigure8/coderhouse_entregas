<div class="card">
    <form action="api/users/register" method="POST" class="register">
        <h2>REGISTRO</h2>
        <input type="text" name="firstname" id="firstname" placeholder="First Name" class="registerForm" required>
        <input type="text" name="lastname" id="lastname" placeholder="Last Name" class="registerForm" required>
        <input type="email" name="email" id="email" placeholder="E-Mail" class="registerForm" required>
        <input type="number" name="age" id="age" placeholder="Age" class="registerForm" required>
        <input type="password" name="password" id="password" placeholder="Password" class="registerForm" required>
        <input type="submit" value="Crear" class="btn w-50">
    </form>
    <div class="center">
        <input type="button" onclick="window.location.href = '/login'" value="Login" class="btn w-50 mt-0 mb-20">
    </div>
</div>